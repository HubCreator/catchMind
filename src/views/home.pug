<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="styles/styles.css")
        title Catch Mind
    body
        .loginBox
            form#jsLogin
                input(placeholder="What's your nickname?", type="text")
        .gameContainer#jsGame
            .controls
                canvas(id="jsCanvas" class="canvas" width="700px" height="700px")
                .controls__range
                    input(type="range" id="jsRange" min="0.1" max="5" value="2.5" step="0.1")
                .controls__btns
                    button(id="jsMode") Fill
                .controls__colors
                    .controls__color.jsColor(style="background-color: white")
                    .controls__color.jsColor(style="background-color: red")
                    .controls__color.jsColor(style="background-color: black")
                    .controls__color.jsColor(style="background-color: orange")
                    .controls__color.jsColor(style="background-color: yellow")
                    .controls__color.jsColor(style="background-color: green")
                    .controls__color.jsColor(style="background-color: skyblue")
                    .controls__color.jsColor(style="background-color: navy")
                    .controls__color.jsColor(style="background-color: purple")
        .rigtPanel
            .gameInfo#jsGameInfo
                .participants#jsParticipants participants: 
                .stopWatch 00:00
            .chat#jsChat
                ul.chat__messages#jsMessages
                form.chat__form#jsSendMessage
                    input(placeholder="Write a Message" type="text")
        script.
            window.events = !{events}   // send "events" variable to window, window.events global variable
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")